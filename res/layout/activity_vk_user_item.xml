<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/image_vk_user_avatarka"
        android:layout_width="100px"
        android:layout_height="100px" 
        />

<TextView
    android:id="@+id/text_vk_user_name"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/image_vk_user_avatarka"
    android:layout_alignTop="@id/image_vk_user_avatarka"
    android:layout_alignBottom="@id/image_vk_user_avatarka"    
    android:gravity="center_vertical"
    android:paddingLeft="20dp"
    android:singleLine="true"
    android:textSize="16sp"
    android:text="Иван ИвановДаМарья" />

    <ImageView
        android:id="@+id/image_vk_user_status"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_toRightOf="@id/text_vk_user_name"
        android:layout_marginTop="40px"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        
        
         
        />
</RelativeLayout>